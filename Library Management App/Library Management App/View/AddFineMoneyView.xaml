<Page x:Class="Library_Management_App.View.AddFineMoneyView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_Management_App.View"
      mc:Ignorable="d" 
      x:Name="AddFineMoneywd"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      DataContext="{StaticResource AddFineMoneyVM}"
      d:DesignHeight="605" d:DesignWidth="700"
      Title="AddFineMoneyView">

    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <ThicknessAnimation Storyboard.TargetName="AddFineMoneywd"
                                    Storyboard.TargetProperty="Margin"
                                    From="426,0,0,0"
                                    To="0"
                                    Duration="0:0:0.2" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadFineMNCM}"
               CommandParameter="{Binding ElementName=AddFineMoneywd}"></i:InvokeCommandAction>
        </i:EventTrigger>

        <i:EventTrigger EventName="MouseLeftButtonDown">
            <i:InvokeCommandAction Command="{Binding MoveWindow}"
                                CommandParameter="{Binding ElementName=AddFineMoneywd}"></i:InvokeCommandAction>
        </i:EventTrigger>

        
    </i:Interaction.Triggers>

    <Grid>
        <Grid RenderTransformOrigin="0.5,0.499">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <StackPanel 
                            Orientation="Vertical"
                            Margin="15,42,0,0"
                            >
                    <TextBlock
                        Margin="-15,0,0,20"
                        HorizontalAlignment="Center"
                        Text="PHIẾU THU TIỀN PHẠT MỚI"
                        FontSize="24"
                        FontFamily="{StaticResource Custom}"
                        Foreground="#1784C2"
                        />
                    <StackPanel Orientation="Horizontal" Height="63" Width="342">
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Margin="10,0,0,0"
                                Text="MÃ PHIẾU THU"
                                FontFamily="{StaticResource Custom}"
                            Foreground="#1784C2"
                            />
                            <Border
                            CornerRadius="10"
                            BorderThickness="2"
                            BorderBrush="Gray"
                            Height="30"
                            >
                                <TextBox
                                x:Name="MAPT"
                                HorizontalAlignment="Left"
                                Width="150"
                                BorderThickness="0"
                                Foreground="Black"
                                IsEnabled="False"
                                FontFamily="{StaticResource Custom}"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:HintAssist.Hint="Nhập mã phiếu thu"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Black"
                            />
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                    Margin="10,0,0,0"
                                    >
                            <TextBlock
                                Text="TÊN ĐỘC GIẢ"
                                FontFamily="{StaticResource Custom}"
                                Foreground="#1784C2"
                            />
                            <TextBox
                                Height="30"
                                x:Name="TENDG"
                                FontFamily="{StaticResource Custom}"
                                Foreground="Black"
                                HorizontalAlignment="Left"
                                Width="150"
                                BorderThickness="2"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:HintAssist.Hint="Nhập tên độc giả"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Gray"
                            />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,10,0,0" Height="58" Width="349"
                                >
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Margin="10,0,0,0"
                                Text="TỔNG NỢ"
                                FontFamily="{StaticResource Custom}"
                            Foreground="#1784C2"
                            />
                            <TextBox
                                Height="30"
                                x:Name="TONGNO"
                                HorizontalAlignment="Left"
                                Width="150"
                                Foreground="Black"
                                FontFamily="{StaticResource Custom}"
                                BorderThickness="2"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:HintAssist.Hint="Nhập tổng nợ"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Gray"
                            />
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                    Margin="10,0,0,0"
                                    >
                            <TextBlock
                                Margin="10,0,0,0"
                                Text="SỐ TIỀN THU"
                                FontFamily="{StaticResource Custom}"
                            Foreground="#1784C2"
                            />
                            <TextBox
                            Height="30"
                            x:Name="SOTIENTHU"
                            FontFamily="{StaticResource Custom}"
                            Foreground="Black"
                            HorizontalAlignment="Left"
                            Width="150"
                            BorderThickness="2"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:HintAssist.Hint="Nhập  số tiền thu"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                            materialDesign:TextFieldAssist.UnderlineBrush="Gray"
                            />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                        Height="58" Width="349"
                                >
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Margin="10,0,0,0"
                                Text="CÒN LẠI"
                                FontFamily="{StaticResource Custom}"
                                Foreground="#1784C2"
                            />
                            <TextBox
                                Height="30"
                                x:Name="CONLAI" 
                                HorizontalAlignment="Left"
                                Width="150"
                                Foreground="Black"
                                FontFamily="{StaticResource Custom}"
                                BorderThickness="2"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:HintAssist.Hint=""
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Gray"
                            />
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                            Margin="10,0,0,0"
                                    >
                            <TextBlock
                                Margin="10,0,0,0"
                                Text="THỜI GIAN"
                                FontFamily="{StaticResource Custom}"
                                Foreground="#1784C2"
                            />
                            <TextBox
                                Height="30"
                                x:Name="NGAY" 
                                FontFamily="{StaticResource Custom}"
                                Foreground="Black"
                                HorizontalAlignment="Left"
                                Width="150"
                                BorderThickness="2"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                         
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Gray"
                            />
                        </StackPanel>
                    </StackPanel>
                    <Button Content="THÊM PHIẾU THU"
                            Margin="0,30,0,0"
                            Width="230"
                            Background="#1784C2"
                            BorderThickness="0"
                            x:Name="btnadd"
                        materialDesign:ButtonAssist.CornerRadius="10"
                            >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding AddCsCommand}"
                                                   CommandParameter="{Binding ElementName=AddFineMoneywd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
        </Grid>

</Page>
