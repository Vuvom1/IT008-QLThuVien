<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_Management_App.View"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Library_Management_App.View.AddImportBookView"
      mc:Ignorable="d" 
      d:DesignHeight="605" d:DesignWidth="700"
      DataContext="{StaticResource AddImportBookVM}"
      x:Name="AddImportBookwd"
      Title="AddImportBookView">

    <Grid>
        <Grid Margin="0,30,0,525">
            <TextBlock
                Text="PHIẾU NHẬP SÁCH"
                Foreground="#1784C2"
                FontFamily="{StaticResource Custom}"
                FontSize="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                    />
        </Grid>

        <Border
            Margin="10,85,411,334"
            Background="White"
            CornerRadius="15"
                        >
            <StackPanel
                Margin="10,10,10,-16"
                            >
                <TextBlock
                    Margin="0,10,0,5"
                    Text="THÔNG TIN PHIẾU NHẬP"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                                />
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="8,0,0,0"
                            Text="MÃ ND"
                            FontFamily="{StaticResource Custom}"
                                    />
                        <TextBlock
                            Margin="4,0,0,0"
                            Text="|"
                            FontFamily="{StaticResource Custom}"
                                    />
                        <TextBlock
                            Margin="4,0,0,0"
                            Text="TÊN ND"
                            FontFamily="{StaticResource Custom}"
                                    />
                    </StackPanel>
                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBox
                                x:Name="MaND" 
                                HorizontalAlignment="Left"
                                FontFamily="{StaticResource Custom}"
                                BorderThickness="0"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                IsEnabled="False"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                            <TextBox
                                Text="|"
                                HorizontalAlignment="Left"
                                FontFamily="{StaticResource Custom}"
                                BorderThickness="0"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                IsEnabled="False"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                            <TextBox
                                x:Name="TenND"
                                HorizontalAlignment="Left"
                                FontFamily="{StaticResource Custom}"
                                BorderThickness="0"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                IsEnabled="False"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <StackPanel>
                    <TextBlock
                        Margin="8,0,0,0"
                        Text="THỜI GIAN"
                        FontFamily="{StaticResource Custom}"
                                />
                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                        <TextBox
                            x:Name="Ngay"
                            HorizontalAlignment="Left"
                            FontFamily="{StaticResource Custom}"
                            BorderThickness="0"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            IsEnabled="False"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                    </Border>
                </StackPanel>
                <StackPanel>
                    <TextBlock
                        Margin="8,0,0,0"
                        Text="MÃ PHIẾU NHẬP"
                        FontFamily="{StaticResource Custom}"
                                />
                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                        <TextBox IsEnabled="False"
                            x:Name="MaPN"
                            HorizontalAlignment="Left"
                            FontFamily="{StaticResource Custom}"
                            BorderThickness="0"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border
            CornerRadius="10"
            Background="White" Margin="9,302,41,263"
                        >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBlock
                        Text="MÃ SÁCH"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Custom}"
                        FontSize="12"
                                />
                </Grid>
                <Grid Grid.Column="1">
                    <TextBlock
                        Margin="43,10,0,0"
                        HorizontalAlignment="Left"
                        Text="TÊN SÁCH"
                        VerticalAlignment="Top"
                        FontFamily="{StaticResource Custom}"
                        FontSize="12"
                                />
                </Grid>
                <Grid Grid.Column="2">
                    <TextBlock
                        Text="NXB"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Custom}"
                        FontSize="12"
                                />
                </Grid>
                <Grid Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Text="SL"
                        VerticalAlignment="Top"
                        MaxWidth="200"
                        FontFamily="{StaticResource Custom}"
                        FontSize="12" Margin="24,10,-68,0" Grid.Column="1"
                                />
                </Grid>
                <Grid Grid.Column="4" Margin="43,0,0,0">
                    <TextBlock
                        Text="THÀNH TIỀN"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        MaxWidth="150"
                        FontFamily="{StaticResource Custom}"
                        FontSize="12"
                                />
                </Grid>
            </Grid>
        </Border>
        <ListView x:Name="ListViewSP" 
            SelectionMode="Single"
            ScrollViewer.VerticalScrollBarVisibility="Hidden" Margin="18,364,48,97"
                        >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border
                                    
                        Width="650"
                        Height="40"
                        CornerRadius="10"
                        Background="White"
                        >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <TextBlock
                                    Text="{Binding MaSp}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource Custom}"
                                    FontSize="12"
                                />
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBlock
                                    Margin="2,0,0,0"
                                    HorizontalAlignment="Left"
                                    Text="{Binding TenSP}"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource Custom}"
                                    FontSize="12"
                                            />
                            </Grid>
                            <Grid Grid.Column="2">
                                <TextBlock
                                    Text="{Binding Size}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource Custom}"
                                    FontSize="12"
                                            />
                            </Grid>
                            <Grid Grid.Column="3">
                                <TextBlock
                                    Text="{Binding SL}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    MaxWidth="100"
                                    FontFamily="{StaticResource Custom}"
                                    FontSize="12"
                                            />
                            </Grid>
                            <Grid Grid.Column="4">
                                <TextBlock
                                    Text="{Binding Tiennhap, StringFormat=\{0:# ###\} VNĐ}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    MaxWidth="150"
                                    FontFamily="{StaticResource Custom}"
                                    FontSize="12"
                                            />
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
        <TextBlock
            Foreground="#6C63FF"
            Text="TỔNG TIỀN: "
            FontFamily="{StaticResource Custom}"
            FontSize="16"
            VerticalAlignment="Top" Margin="34,543,570,0"
                        />
        <TextBlock
            Foreground="#6C63FF"
            x:Name="TT"
            FontFamily="{StaticResource Custom}"
            FontSize="16"
            VerticalAlignment="Top" Margin="160,543,365,0"
                        />
        <Border
            Margin="348,80,40,334"
            Background="White"
            CornerRadius="15"
                        >
            <StackPanel
                Margin="10"
                            >
                <TextBlock
                    Margin="0,10,0,5"
                    Text="CHI TIẾT PHIẾU NHẬP"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                                />
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        Margin="8,0,0,0"
                        Text="MÃ SÁCH | TÊN  SÁCH"
                        FontFamily="{StaticResource Custom}"
                                />
                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                        <ComboBox
                            Margin="4,0,0,0"
                            x:Name="SP"
                            FontFamily="{StaticResource Custom}"
                            BorderThickness="0"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            ItemsSource="{Binding LSP}"
                                        >
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding TENSP}"/>
                                        <TextBlock
                                            Text="|"
                                            Margin="4,0,4,0"
                                                        />
                                        <TextBlock 
                                            Text="{Binding SIZE}"/>
                                        <TextBlock
                                            Text="|"
                                            Margin="4,0,4,0"
                                                        />
                                        <TextBlock 
                                            Text="{Binding SL}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                            <!--<i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding Choose}"
                                                       CommandParameter="{Binding ElementName=AddImportwd}"></i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>-->
                        </ComboBox>
                    </Border>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <StackPanel
                        Width="75"
                                    >
                        <TextBlock
                            Margin="5,0,0,0"
                            Text="SỐ LƯỢNG"
                            FontFamily="{StaticResource Custom}"
                                    />
                        <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                            <TextBox
                                x:Name="SL"
                                HorizontalAlignment="Left"
                                FontFamily="{StaticResource Custom}"
                                BorderThickness="0"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0" Width="73"/>
                        </Border>
                    </StackPanel>
                    <StackPanel
                        Width="210"
                                    >
                        <TextBlock
                            Margin="20,0,0,0"
                            Text="ĐƠN GIÁ"
                            FontFamily="{StaticResource Custom}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                    />
                        <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10"
                            Margin="20,0,0,0">
                            <TextBox
                                x:Name="DG" IsEnabled="False"
                                HorizontalAlignment="Left"
                                FontFamily="{StaticResource Custom}"
                                BorderThickness="0"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
                <StackPanel
                    Width="270"
                    Margin="0,18"
                    Height="35"
                    Orientation="Horizontal"
                                >
                    <Button
                        Margin="2,0,0,0"
                        BorderThickness="0"
                        Content="THÊM"
                        FontSize="12"
                        x:Name="addbtn"
                        FontFamily="{StaticResource Custom}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Background="#1784C2" Height="30"
                                >
                        <!--<i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction     
                                                            Command="{Binding AddSP}"
                                                            CommandParameter="{Binding ElementName=AddImportwd}"></i:InvokeCommandAction>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>-->
                    </Button>
                    <Button    
                        BorderThickness="0"
                        Margin="15,0,0,0"
                        Content="XÓA"
                        FontSize="12"
                        x:Name="deletebtn"
                        FontFamily="{StaticResource Custom}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Background="#1784C2"
                                >

                        <!--<i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction     
                                                            Command="{Binding DeleteSP}"
                                                            CommandParameter="{Binding ElementName=AddImportwd}"></i:InvokeCommandAction>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>-->
                    </Button>
                    <Button                            
                        BorderThickness="0"
                        Margin="15,0,0,0"
                        Content="XÁC NHẬN"
                        FontSize="12"
                        FontFamily="{StaticResource Custom}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        x:Name="ttbtn"
                        Background="#1784C2"
                                >

                        <!--<i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction     
                                                            Command="{Binding SavePN}"
                                                            CommandParameter="{Binding ElementName=AddImportwd}"></i:InvokeCommandAction>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>-->
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</Page>
