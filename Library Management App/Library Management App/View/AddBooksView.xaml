<Page x:Class="Library_Management_App.View.AddBooksView"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Library_Management_App.View"
     mc:Ignorable="d"
    Background="White"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    x:Name="AddBookswd"
    DataContext="{StaticResource AddBooksVM}"
    Height="605" 
    Width="700">


    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <ThicknessAnimation Storyboard.TargetName="AddBookswd"
                                Storyboard.TargetProperty="Margin"
                                From="426,0,0,0"
                                To="0"
                                Duration="0:0:0.2" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Image 
            x:Name="HinhAnh"
            Source="{Binding linkimage}"
            Height="374"
            VerticalAlignment="Center">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding AddImage}"
                                               CommandParameter="{Binding ElementName=HinhAnh}"></i:InvokeCommandAction>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Image>
            </Grid>
            <Grid Grid.Column="0">
                <StackPanel 
                        Orientation="Vertical"
                        Margin="15,30,0,0"
                        >
                    <TextBlock
                    Margin="-15,0,0,20"
                    HorizontalAlignment="Center"
                    Text="SÁCH MỚI"
                    FontSize="24"
                    FontFamily="{StaticResource Custom}"
                    Foreground="#353A55"
                    />
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                            Margin="10,0,0,0"
                            Text="MÃ SÁCH"
                            FontFamily="{StaticResource Custom}"
                        Foreground="#353A55"
                        />
                            <Border
                        CornerRadius="10"
                        BorderThickness="2"
                        BorderBrush="Gray"
                        Height="30"
                        >
                                <TextBox
                            x:Name="MaSach"
                            HorizontalAlignment="Left"
                            Width="150"
                            BorderThickness="0"
                            Foreground="Black"
                            IsEnabled="False"
                            FontFamily="{StaticResource Custom}"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:HintAssist.Hint="Nhập mã sản phẩm"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                            materialDesign:TextFieldAssist.UnderlineBrush="Black"
                        />
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                Margin="10,0,0,0"
                                >
                            <TextBlock
                            Margin="10,0,0,0"
                            Text="TÊN SÁCH"
                            FontFamily="{StaticResource Custom}"
                            Foreground="#353A55"
                        />
                            <TextBox
                            Height="30"
                            x:Name="TenSach"
                            FontFamily="{StaticResource Custom}"
                            Foreground="Black"
                            HorizontalAlignment="Left"
                            Width="150"
                            BorderThickness="2"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:HintAssist.Hint="Nhập tên sản phẩm"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                            materialDesign:TextFieldAssist.UnderlineBrush="Gray"
                        />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                            Margin="0,10,0,0"
                            >
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                            Margin="10,0,0,0"
                            Text="GIÁ SÁCH"
                            FontFamily="{StaticResource Custom}"
                        Foreground="#353A55"
                        />
                            <TextBox
                            Height="30"
                            x:Name="GiaSach"
                            HorizontalAlignment="Left"
                            Width="150"
                            Foreground="Black"
                            FontFamily="{StaticResource Custom}"
                            BorderThickness="2"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:HintAssist.Hint="Nhập giá sản phẩm"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                            materialDesign:TextFieldAssist.UnderlineBrush="Gray"
                        />
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                Margin="10,0,0,0"
                                >
                            <TextBlock
                            Margin="10,0,0,0"
                            Text="LOẠI SÁCH"
                            FontFamily="{StaticResource Custom}"
                        Foreground="#353A55"
                        />
                            <Border
                        BorderBrush="Gray"
                        BorderThickness="2"
                        Margin="5,0,0,0"
                        Height="30"
                        Width="150"
                        CornerRadius="10"
                        Background="White"
                    >
                                <ComboBox
                            x:Name="LoaiSach"
                            Style="{StaticResource MaterialDesignFilledComboBox}"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="-10,-15,0,0"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            BorderThickness="0"
                            materialDesign:HintAssist.FontFamily="{StaticResource Custom}"
                            materialDesign:HintAssist.Hint="Nhấn để chọn"
                            Background="Transparent" Foreground="Black"
                            FontFamily="{StaticResource Custom}"
                            Height="30"
                            FontSize="12"
                            Width="130">
                                    <ComboBoxItem Content="Khoa học"/>
                                    <ComboBoxItem Content="Chính trị"/>
                                    <ComboBoxItem Content="Kinh tế"/>
                                    <ComboBoxItem Content="Văn học"/>
                                    <ComboBoxItem Content="Lịch sử"/>
                                    <ComboBoxItem Content="Tâm Lý"/>
                                    <ComboBoxItem Content="Tiểu thuyết"/>
                                    <ComboBoxItem Content="Thiếu nhi"/>
                                </ComboBox>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                            Margin="0,10,0,0"
                            >
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                            Margin="10,0,0,0"
                            Text="SỐ LƯỢNG"
                            FontFamily="{StaticResource Custom}"
                        Foreground="#353A55"
                        />
                            <TextBox
                            Height="30"
                            x:Name="SlSach"
                            HorizontalAlignment="Left"
                            Width="150"
                            FontFamily="{StaticResource Custom}"
                            BorderThickness="2"
                        Foreground="Black"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:HintAssist.Hint="Nhập số lượng"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                            materialDesign:TextFieldAssist.UnderlineBrush="Gray"
                        />
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                Margin="10,0,0,0"
                                >
                            <TextBlock
                            Margin="10,0,0,0"
                            Text="Nhà xuất bản"
                            FontFamily="{StaticResource Custom}"
                                                        Foreground="#353A55"

                        />
                            <Border
                        BorderBrush="Gray"
                        BorderThickness="2"
                        Margin="5,0,0,0"
                        Height="30"
                        Width="150"
                        CornerRadius="10"
                        Background="White"
                    >
                                <ComboBox
                            x:Name="NXB"
                            Style="{StaticResource MaterialDesignFilledComboBox}"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="-10,-15,0,0"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                      
                            BorderThickness="0"
                            materialDesign:HintAssist.FontFamily="{StaticResource Custom}"
                            materialDesign:HintAssist.Hint="Nhấn để chọn"
                            Background="White"
                            FontFamily="{StaticResource Custom}"
                            Height="30"
                            FontSize="12"
                            Width="130">
                                    <ComboBoxItem Content="Dân Trí"/>
                                    <ComboBoxItem Content="NXB Thanh Niên"/>
                                    <ComboBoxItem Content="Thế Giới"/>
                                    <ComboBoxItem Content="NXB Tổng Hợp TPHCM"/>
                                    <ComboBoxItem Content="Văn Học"/>
                                    <ComboBoxItem Content="NXB Hội Nhà Văn"/>
                                </ComboBox>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Margin="10,10,0,0"
                                Text="Năm xuất bản"
                                FontFamily="{StaticResource Custom}"
                                Foreground="#353A55"
                                />
                            <TextBox
                                Height="30"
                                x:Name="Namxuatban"
                                HorizontalAlignment="Left"
                                Width="150"
                                FontFamily="{StaticResource Custom}"
                                BorderThickness="2"
                                Foreground="Black"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:HintAssist.Hint="Nhập năm xuất bản"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Gray"
/>
                        </StackPanel>
                    </StackPanel>
                    <TextBlock
                            Margin="8,10,0,0"
                            Text="Thông tin sách"
                            FontFamily="{StaticResource Custom}"
                                                Foreground="#353A55"

                        />
                    <TextBox
                            x:Name="MotaSach"
                            FontFamily="{StaticResource Custom}"
                            HorizontalAlignment="Left"
                            Width="310"
                            Height="150"
                            BorderThickness="2"
                            Foreground="Black"
                         
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:HintAssist.Hint=""
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                            materialDesign:TextFieldAssist.UnderlineBrush="Gray"
                            
                            HorizontalScrollBarVisibility="Auto"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                        />
                    <Button Content="THÊM SÁCH"
                        Margin="0,30,0,0"
                        Width="230"
                        Background="#353A55"
                        BorderThickness="0"
                        x:Name="btnadd"
                    materialDesign:ButtonAssist.CornerRadius="10"
                        >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding AddBookCM}"
                                               CommandParameter="{Binding ElementName=AddBookswd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
