<Page x:Class="Library_Management_App.View.AddReadersView"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Library_Management_App.View"
    mc:Ignorable="d"
    x:Name="AddCswd"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    DataContext="{StaticResource AddReadersVM}"
    Height="500" 
    Width="600">

    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <ThicknessAnimation Storyboard.TargetName="AddCswd"
                                    Storyboard.TargetProperty="Margin"
                                    From="426,0,0,0"
                                    To="0"
                                    Duration="0:0:0.2" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Border
    CornerRadius="15"
    Background="Transparent"
    >
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeftButtonDown">
                <i:InvokeCommandAction Command="{Binding MoveWindow}"
                                   CommandParameter="{Binding ElementName=AddCswd}"></i:InvokeCommandAction>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="60"/>
                    
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <StackPanel Orientation="Vertical"
                            Margin="15,20,10,10"
                            >
                        <TextBlock
                        Margin="-5,20,0,30"
                        HorizontalAlignment="Center"
                        Text="THÔNG TIN ĐỘC GIẢ"
                        FontSize="24"
                        Foreground="#353A55"
                        FontFamily="{StaticResource Custom}"
                        />
                        <StackPanel Orientation="Horizontal" Margin="130 0 0 0">
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                Margin="-25,0,0,0"
                                Text="MÃ ĐỘC GIẢ"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center" Height="18"
                            />
                                <Border
                                CornerRadius="10"
                                BorderThickness="2"
                                BorderBrush="Gray"
                                
                                >
                                    <TextBox
                                IsEnabled="False" Margin="0 0 0 0"
                                x:Name="Madg"
                                HorizontalAlignment="Left"
                                Width="150"
                                FontFamily="{StaticResource Custom}"
                                Foreground="#353A55" FontWeight="ExtraBlack"
                                BorderThickness="0"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:HintAssist.Hint="Thêm mã khách hàng" 
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,3,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Black"
                                
                            />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                    Margin="10,0,0,0"
                                    >
                                <TextBlock
                                Margin="-60,0,0,0"
                                Text="HỌ TÊN"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center" Height="18" Width="85"
                            />
                                <TextBox
                                x:Name="Tendg"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Left"
                                Width="155"
                                BorderThickness="2"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:HintAssist.Hint="Thêm họ tên"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,3,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Black"
                            />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                Margin="130,30,0,0"
                                >
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                Margin="0,0,0,0"
                                Text="SỐ ĐIỆN THOẠI"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center" Width="133"
                            />
                                <TextBox
                                x:Name="SDTdg" Margin="0 3 10 0"
                                HorizontalAlignment="Left"
                                Width="154"
                                FontFamily="{StaticResource Custom}"
                                BorderThickness="2"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:HintAssist.Hint="Thêm số điện thoại"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,2,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Black"
                            />
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                Margin="0,0,0,0"
                                Text="NGÀY SINH"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center" Width="133"
                            />
                                <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10">
                                    <DatePicker
                                    x:Name="Ngaysinhdg" 
                                    HorizontalAlignment="Left"
                                    Width="154"
                                    Height="30"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="1"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:HintAssist.Hint="Nhập ngày sinh"
                                />
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock
                            Margin="-200,10,0,0"
                            Text="ĐỊA CHỈ"
                            FontFamily="{StaticResource Custom}"
                            HorizontalAlignment="Center" Width="88"
                        />
                                                <TextBox
                            x:Name="DCdg" Margin="5 5 0 0"
                            FontFamily="{StaticResource Custom}"
                            HorizontalAlignment="Center"
                            Width="320"
                            Height="30"
                            BorderThickness="2"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:HintAssist.Hint="Thêm địa chỉ"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,2,0,0"
                            materialDesign:TextFieldAssist.UnderlineBrush="Black"
                            HorizontalScrollBarVisibility="Auto"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"                            
                        />
                        </StackPanel>
                        <StackPanel>
                            <TextBlock
                               Margin="-200,10,0,0"
                               Text="EMAIL"
                               FontFamily="{StaticResource Custom}"
                               HorizontalAlignment="Center" Width="88"
                           />
                            <TextBox
                               x:Name="emaildg" Margin="5 5 0 0"
                               FontFamily="{StaticResource Custom}"
                               HorizontalAlignment="Center"
                               Width="320"
                               Height="30"
                               BorderThickness="2"
                               materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                               materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                               materialDesign:HintAssist.Hint="Thêm địa chỉ"
                               materialDesign:TextFieldAssist.TextBoxViewMargin="10,2,0,0"
                               materialDesign:TextFieldAssist.UnderlineBrush="Black"
                               HorizontalScrollBarVisibility="Auto"
                               AcceptsReturn="True"
                               TextWrapping="Wrap"                            
                           />
                            <Button Content="THÊM ĐỘC GIẢ"
                            Margin="5,40,0,0"
                            Width="319"
                            BorderThickness="0"
                            x:Name="btnupdate"
                            Background="#353A55"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            FontFamily="{StaticResource Custom}"
                            >

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding AddAddReadersCM}"
                                                   CommandParameter="{Binding ElementName=AddCswd}"></i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                    <Button
                            Content="Hủy"
                            Width="100"
                            Height="40"
                            VerticalAlignment="Center"
                            Margin="400,0,0,0"
                            Foreground="White"
                            Background="#353A55"
                            HorizontalAlignment="Left" Grid.Row="1">

                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction     
                                        Command="{Binding Back}"
                                        CommandParameter="{Binding ElementName=AddCswd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
            </Grid>
        </Grid>
    </Border>
</Page>
