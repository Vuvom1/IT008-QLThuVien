<Page x:Class="Library_Management_App.View.DetailFineMoneyView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_Management_App.View"
      mc:Ignorable="d" 
      xmlns:i= "http://schemas.microsoft.com/xaml/behaviors"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="605" d:DesignWidth="700"
      DataContext="{StaticResource DetailFMVM}"
      x:Name="DetailFineMoneywd"
      Title="DetailFineMoneyView">

    <Border
    x:Name="DetailOrder"
    CornerRadius="15"
    Background="Transparent">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="Transparent">
                    <StackPanel 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        >

                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel Orientation="Vertical"
                        Margin="0,0,0,0"
                        >
                        <TextBlock
                    Margin="-15,0,0,70"
                    HorizontalAlignment="Center"
                    Text="THÔNG TIN PHIẾU THU"
                    FontSize="24"
                    Foreground="#6C63FF"
                    FontFamily="{StaticResource Custom}"
                    />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                            Margin="8,0,0,0"
                            Text="MÃ PHIẾU THU"
                            FontFamily="{StaticResource Custom}"
                            HorizontalAlignment="Center"
                        />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                            x:Name="MaPT"
                            HorizontalAlignment="Left"
                            Width="150"
                            FontFamily="{StaticResource Custom}"
                            BorderThickness="0"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:HintAssist.Hint="Phiếu thu"
                            IsEnabled="False"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                        />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                Margin="10,0,0,0"
                                >
                                <TextBlock
                            Margin="8,0,0,0"
                            Text="TÊN ĐỘC GIẢ"
                            FontFamily="{StaticResource Custom}"
                            HorizontalAlignment="Center"
                        />
                                <TextBox
                            x:Name="TenDG"
                            FontFamily="{StaticResource Custom}"
                            HorizontalAlignment="Left"
                            Width="200"
                            BorderThickness="2"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:HintAssist.Hint="HỌ TÊN"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                            materialDesign:TextFieldAssist.UnderlineBrush="Black"
                        />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            >
                            <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center">
                                <TextBlock
                            Margin="8,0,0,0"
                            Text="TỔNG NỢ"
                            FontFamily="{StaticResource Custom}"
                            HorizontalAlignment="Center"
                        />
                                <TextBox
                            x:Name="TONGNO"
                            HorizontalAlignment="Left"
                            Width="150"
                            FontFamily="{StaticResource Custom}"
                            BorderThickness="2"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:HintAssist.Hint="Tổng nợ"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                            materialDesign:TextFieldAssist.UnderlineBrush="Black"
                        />
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                Margin="15,0,0,0"
                                >
                                <TextBlock
                            Margin="8,0,0,0"
                            Text="SỐ TIỀN THU"
                            FontFamily="{StaticResource Custom}"
                            HorizontalAlignment="Center"
                        />
                                <TextBox
                            x:Name="STT"
                            FontFamily="{StaticResource Custom}"
                            HorizontalAlignment="Left"
                            Width="200"
                            BorderThickness="2"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:HintAssist.Hint="Số tiền thu"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                            materialDesign:TextFieldAssist.UnderlineBrush="Black"
                        >
                                   
                                </TextBox>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            >
                            <StackPanel Orientation="Vertical"
                                Margin="10,0,0,0"
                                >
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center" Height="19" Width="46">
                            <TextBlock
                           
                            Text="CÒN LẠI"
                            FontFamily="{StaticResource Custom}" 
                            FontSize="12" Height="18" Width="66" RenderTransformOrigin="0.938,0.259"
                        />
                        </StackPanel>
                        <TextBox
                    
                            x:Name="CL"
                            FontFamily="{StaticResource Custom}"
                            HorizontalAlignment="Center"
                            Width="370"
                            Height="29"
                            BorderThickness="2"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:HintAssist.Hint="Còn lại"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                            materialDesign:TextFieldAssist.UnderlineBrush="Black"
                            HorizontalScrollBarVisibility="Auto"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                        />
                        <StackPanel Orientation="Horizontal" 
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center" Height="19" Width="86"/>
                        <Button Content="CẬP NHẬT"
                        Margin="0,70,0,0"
                        Width="230"
                        BorderThickness="0"
                        x:Name="btnupdate"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Background="#6C63FF"
                        >
                            <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding Update}"
                                               CommandParameter="{Binding ElementName=DetailRdwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        </Button>
                        <Button Margin="529,14,23,10" Background="#6C63FF">
                            <TextBlock Text="Quay lại"
                                   Height="30"
                                   Width="53"
                                   />
                            <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding back}"
                                               CommandParameter="{Binding ElementName=DetailRdwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Page>
