<Page x:Class="Library_Management_App.View.DetailQLNV"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_Management_App.View"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="650" d:DesignWidth="700"
      x:Name="DetailQlnvwd"
      DataContext="{StaticResource DetailQLNVVM}"
      >

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding GetNV}"
                                   CommandParameter="{Binding ElementName=DetailQlnvwd}"></i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <Border
    CornerRadius="15"
    Background="White"
    >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="Transparent">
                    <StackPanel 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            >

                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel Orientation="Vertical"
                            Margin="0,0,0,0"
                            >
                        <TextBlock
                        Margin="-15,0,0,70"
                        HorizontalAlignment="Center"
                        Text="THÔNG TIN NHÂN VIÊN"
                        FontSize="24"
                        Foreground="#353A55"
                        FontFamily="{StaticResource Custom}"
                        />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                Margin="8,0,0,0"
                                Text="MÃ NHÂN VIÊN "
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                            />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                x:Name="MaNV"
                                HorizontalAlignment="Left"
                                Width="150"
                                FontFamily="{StaticResource Custom}"
                                BorderThickness="0"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                IsEnabled="False"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                            />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                    Margin="10,0,0,0"
                                    >
                                <TextBlock
                                Margin="8,0,0,0"
                                Text="HỌ TÊN"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                            />
                                <TextBox
                                x:Name="TenNV"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Left"
                                Width="200"
                                BorderThickness="2"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:HintAssist.Hint="THÊM HỌ TÊN"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Black"
                            />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                >
                            <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Center">
                                <TextBlock
                                Margin="8,0,0,0"
                                Text="SỐ ĐIỆN THOẠI"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                            />
                                <TextBox
                                x:Name="SDTNV"
                                HorizontalAlignment="Left"
                                Width="150"
                                FontFamily="{StaticResource Custom}"
                                BorderThickness="2"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:HintAssist.Hint="THÊM SDT"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Black"
                            />
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                    Margin="15,0,0,0"
                                    />
                            <StackPanel Orientation="Vertical"
                                Margin="10,0,0,0"
                                >
                                <TextBlock
                                Margin="8,0,0,0"
                                Text="NGÀY SINH"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                            />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <DatePicker
                                x:Name="NgaySinhNV"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Left"
                                Width="200"
                                BorderThickness="0"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Black"
                            />
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                >
                            <StackPanel Orientation="Vertical"/>
                            <StackPanel Orientation="Vertical"
                                        Margin="15,0,0,0"
                                        >
                                                            <TextBlock
                                    Margin="8,0,0,0"
                                    Text="GIỚI TÍNH"
                                    FontFamily="{StaticResource Custom}"
                                    HorizontalAlignment="Center"
                                />
                                                            <ComboBox
                                    x:Name="gioitinhNV"
                                    FontFamily="{StaticResource Custom}"
                                    HorizontalAlignment="Left"
                                    Width="200"
                                    BorderThickness="2"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:HintAssist.Hint="THÊM GIỚI TÍNH"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="Black"
                                >
                                    <ComboBoxItem Content="Nam"/>
                                    <ComboBoxItem Content="Nữ"/>
                                    <ComboBoxItem Content="Khác"/>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center" Height="19" Width="46">
                            <TextBlock
                               
                                Text="ĐỊA CHỈ"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                                FontSize="12"
                            />
                        </StackPanel>
                        <TextBox
                        
                                x:Name="DCNV"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                                Width="370"
                                Height="29"
                                BorderThickness="2"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:HintAssist.Hint="THÊM ĐỊA CHỈ"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Black"
                                HorizontalScrollBarVisibility="Auto"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                            />
                        <StackPanel Orientation="Horizontal" 
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center" Height="19" Width="86">
                            <TextBlock
                                Text="ĐỊA CHỈ EMAIL"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                                FontSize="12"
                            />
                        </StackPanel>
                        <TextBox
                                x:Name="eMAILNV"
                                Margin="0,0,0,0"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                                Width="370"
                                Height="29"
                                BorderThickness="2"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                materialDesign:HintAssist.Hint="NHẬP EMAIL"
                                materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                materialDesign:TextFieldAssist.UnderlineBrush="Black"
                                HorizontalScrollBarVisibility="Auto"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"/>
                        <Button Content="CẬP NHẬT"
                            Margin="0,70,0,0"
                            Width="230"
                            BorderThickness="0"
                            x:Name="btnupdate"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Background="#353A55"
                            >
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding Update}"
                                                   CommandParameter="{Binding ElementName=DetailQlnvwd}"></i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                        <Button Margin="529,14,23,10" Background="#353A55">
                            <TextBlock Text="Quay lại"
                                       Height="30"
                                       Width="53"
                                       />
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding Back}"
                                                   CommandParameter="{Binding ElementName=DetailQlnvwd}"></i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Page>
